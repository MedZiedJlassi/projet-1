{% extends 'base.html.twig' %}

{% block title %}
	{{ 'form.signin'|trans }}
{% endblock %}

{% block body %}
	<div class="container mt-5 pt-5">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					{{ 'user.loggedInMessage'|trans({'%username%': app.user.username, '%logoutUrl%': path('app_logout')})|raw }}
				</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal">{{ 'form.signin'|trans }}</h1>
            <div class="form-group">
                <label for="inputEmail">{{ 'YOUR-EMAIL'|trans }}</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword">{{ 'YOUR-PASSWORD'|trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
			        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
			        See https://symfony.com/doc/current/security/remember_me.html
			
			        <div class="checkbox mb-3">
			            <label>
			                <input type="checkbox" name="_remember_me"> Remember me
			            </label>
			        </div>
			    #}

			<button class="btn btn-lg btn-primary mt-3" type="submit">
				{{ 'form.signinBtn'|trans }}
			</button>
		</form>
	</div>
{% endblock %}
